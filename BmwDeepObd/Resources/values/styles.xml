<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="MyTheme" parent="Theme.AppCompat">
    <item name="dropDownListViewStyle">@style/SpinnerDividerStyle</item>
    <item name="android:dropDownListViewStyle">@style/SpinnerDividerStyle</item>
  </style>
  <style name="SpinnerDividerStyle" parent="style/Widget.AppCompat.ListView.DropDown">
    <item name="android:divider">#635D63</item>
    <item name="android:dividerHeight">1px</item>
  </style>
  <style name="ListViewNoDividerStyle" parent="style/Widget.AppCompat.ListView">
    <item name="android:divider">@color/colorListViewDivider</item>
    <item name="android:dividerHeight">0px</item>
  </style>
  <style name="TextViewInnerCaption" parent="TextAppearance.AppCompat">
    <item name="android:background">@color/colorCaptionBackground</item>
    <item name="android:textColor">@color/colorCaptionText</item>
  </style>
</resources>
